@model IEnumerable<TenantAccount.Data.Entities.Сontract>

@{
    ViewData["Title"] = "Договора";
}

<h1>Договора</h1>

@if (!User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Создать запись</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> @:|
                }

                <a asp-action="Details" asp-route-id="@item.Id">Подробности</a> |

                @if (!User.IsInRole("admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
